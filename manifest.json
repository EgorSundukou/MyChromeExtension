{
  "manifest_version": 3,
  "name": "AutoDeclineFB",
  "version": "2.0",
  "description": "Автоклик по кнопке 'Отклонить' с управлением через popup",
  "permissions": [
    "activeTab",
    "scripting",
    "alarms",
    "storage"
  ],
  "host_permissions": [
    "*://*.facebook.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.facebook.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}